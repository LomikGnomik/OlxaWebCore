@model Post

@{Layout = "_LayoutBlogRightSidebar"; 
    
        ViewData["Title"] = Model.Title;
}

<div class="post">
    <div class="post-inner-body">
        <h1>
            @Model.Title
        </h1>

        <div class="post-meta">
            <div class="meta-panel">

                <span>в</span>
                <span>
                    <i class="fa fa-cogs" aria-hidden="true"></i>
                    <a href="#">Категорию</a>
                </span>
                <span>
                    <i class="fa fa-comment-o" aria-hidden="true"></i>
                    <a href="#" class="post-comments">9</a>
                </span>
            </div>
            <div class="data">
                <span>
                    @Model.PostedOn.Day.@Model.PostedOn.Month.@Model.PostedOn.Year
                </span>
            </div>
        </div>  <!--post-meta-->


        <div class="post_inner-content">
          @Html.Raw(@Model.Description)
        </div>
    </div> @*post-inner-body*@

