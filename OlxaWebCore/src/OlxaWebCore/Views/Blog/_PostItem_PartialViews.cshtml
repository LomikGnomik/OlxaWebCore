
@model Post



<div class="post-item-wrap">
    <div class="post-item">
        @*<a class="post__img" asp-action="Post" asp-controller="Blog" asp-route-postID=@Model.PostID></a>*@
        <a asp-action="Post" asp-controller="Blog" asp-route-postID="@Model.PostID" class="image-wrap">
            <img class="image" src="@Model.Picture" alt="@Model.Title" />
        </a>
        <div class="post-body">
            <div class="post-meta">
                <div class="meta-panel">
                    @*<p class="category-post">*@
                    <span>В</span>
                    <span>
                        <i class="fa fa-cogs" aria-hidden="true"></i>
                        <a class="category-blog" asp-controller="Blog" asp-action="AllPosts" asp-route-category="@Model.Category">@Model.Category</a>
                    </span>
                    @*</p>*@
                    <span>
                        <i class="fa fa-comment-o" aria-hidden="true"></i>
                        <a href="#" class="post-comments">9</a>
                    </span>
                </div>
                <div class="data">
                    <span>
                        @Model.PostedOn.ToString("D")
                    </span>
                </div>
            </div>  <!--post-meta-->
            <a asp-action="Post" asp-controller="Blog" asp-route-postID="@Model.PostID" class="post-title">
                <h3>@Model.Title</h3>
            </a>
            <p>
                @Html.Raw(@Model.ShortDescription)
            </p>
            <a asp-action="Post" asp-controller="Blog" asp-route-postID="@Model.PostID" class="read-more">Читать далее...</a>
        </div>
    </div>
</div>


