
@model Post

<article class="post__item">
    <a class="post__img" asp-action="Post" asp-controller="Blog" asp-route-Id=@Model.PostID>@*<img src="~/images/blog/post01.jpg" alt="картиночка" />*@</a>
    <div class="post-body">
        <div class="post-meta">
            <div class="meta-panel">
                @*<span>в</span>*@
                <div class="admin-blog">
                    @*<a href="" class="public"><i class="fa fa-plus-square-o" aria-hidden="true" title="Опубликовать"></i></a>
                    <a href="" class="disabled"><i class="fa fa-minus-square-o" aria-hidden="true" title="Снять с публикации"></i></a>
                    <a href="" class="edit"><i class="fa fa-pencil-square-o" aria-hidden="true" title="Редактировать"></i></a>*@                                    
                   
                     <div>В категории: @Model.Category</div>
                </div>
                @*<span>
                    <i class="fa fa-comment-o" aria-hidden="true"></i>
                    <a href="#" class="post-comments">9</a>
                </span>*@
            </div>
            <div class="data">
                <span>
                 @Model.PostedOn.Day.@Model.PostedOn.Month.@Model.PostedOn.Year 
                </span>
            </div>
        </div>  <!--post-meta-->
        <a asp-action="Post" asp-controller="Blog" asp-route-Id="" class="post-title">
            <h3>@Model.Title</h3>
        </a>
        <p>
            Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud ullamco laboris nisi ut aliquip ex ea co...
        </p>
        <a asp-action="Post" asp-controller="Blog" asp-route-Id="@Model.PostID" class="read-more" >Читать далее...</a>

   @*<br><a asp-action="EditPost" asp-controller="Blog" asp-route-PostID="@Model.PostID" class="btn-danger">редактировать</a>*@

</div>
</article>