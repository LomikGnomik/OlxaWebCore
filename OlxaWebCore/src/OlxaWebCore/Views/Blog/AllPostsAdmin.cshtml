@model IEnumerable<Post>

@{
    Layout = "_LayoutAdmin";

    ViewData["Title"] = "Блог";
}



@section ControlPanel{
<div class="btn"><a asp-controller="Blog" asp-action="CreatePost">Создать пост</a></div>
}
    <h3>Список всех постов</h3>

    <table class="table-admin">
        <tr>
            <th>ID</th>
            <th>Название</th>
            <th>Категория</th>
            <th>Виден?</th>
            <th>Просмотров</th>
            <th></th>
        </tr>
        @foreach (var post in @Model)
        {
            <tr>
                <td>@post.PostID</td>
                <td><a asp-controller="Blog" asp-action="EditPost" asp-route-postID="@post.PostID">@post.Title</a></td>
                <td>@post.Category</td>
                <td class="@(post.Published== true ? "post-published" : "post-no-published")"></td>
                <td>@post.Counter</td>
                
                <td><a asp-controller="Blog" asp-action="DeletePost" asp-route-postID="@post.PostID"class="btn-close" title="Удалить">X</a></td>
            </tr>
            
        }
    </table>

