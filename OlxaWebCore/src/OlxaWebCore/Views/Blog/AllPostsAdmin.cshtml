@model IEnumerable<Post>

@{
    Layout = "_LayoutAdmin";

    ViewData["Title"] = "Блог";
}

<a asp-controller="Blog" asp-action="CreatePost">Создать пост</a>

<div class="container">
    <h3>Список всех постов</h3>

    <table>
        <tr>
            <th>ID</th>
            <th>Название</th>
            <th>Категория</th>
            <th>Виден?</th>
        </tr>
        @foreach (var post in @Model)
        {
            <tr>
                <td>@post.PostID</td>
                <td><a asp-controller="Blog" asp-action="EditPost" asp-route-postID="@post.PostID">@post.Title</a></td>
                <td>@post.Category</td>
                <td>@post.Published</td>
                
                <td><a asp-controller="Blog" asp-action="DeletePost" asp-route-postID="@post.PostID">Удалить</a></td>
            </tr>
        }
    </table>
</div>
