@model IEnumerable<Portfolio>

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Портфолио";
}

@section ControlPanel{
    
        <a class="btn" asp-action="CreatePortfolio" asp-controller="Portfolio">Добавить сайт в портфолио</a>
    
}

    <h3>Список всех сайтов</h3>

    <table class="table-admin">
        <tr>
            <th>ID</th>
            <th>Название</th>
            <th>Категория</th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var site in @Model)
        {
            <tr>
                <td>@site.PortfolioID</td>
                <td><a asp-controller="Portfolio" asp-action="EditPortfolio" asp-route-portfolioID="@site.PortfolioID" >@site.Title</a></td>
                <td>@site.Category</td>
                <td><a asp-controller="Portfolio" asp-action="EditPortfolio" asp-route-portfolioID="@site.PortfolioID">Редактировать</a></td>
                <td><a asp-controller="Portfolio" asp-action="DeletePortfolio" asp-route-portfolioID="@site.PortfolioID"class="btn-close" title="Удалить">X</a></td>
            </tr>
        }
    </table>
