@*@model Order*@
@{ 
    ViewData["Title"] = "Спасибо за обращение в OlxaWeb";
    ViewData["Robots"] = "none";
}
<div class="order-wrapper">
    
        <div class="order-title-wrap">
            <section class="order-title">
                <h3>
                    <span>@*@Model.Name*@,</span> спасибо за обращение в OlxaWeb!
                </h3>
                <p>
                    Мы скоро свяжемся c вами.
                </p>
            </section>
            <section class="order-effect">
                <div class="background">
                    <div class="frame">
                        <div class="cat">
                            <div class="head"></div>
                            <div class="ear-1"></div>
                            <div class="ear-2"></div>
                            <div class="eye-1"></div>
                            <div class="eye-2"></div>
                            <div class="nose"></div>
                        </div>
                    </div>
                    <div class="frame-2">                       
                        
                    </div>
                    <div class="me">
                        <div class="me-body"></div>
                        <div class="me-head">
                            <div class="hair"></div>
                            <div class="face">
                                <div class="eyee-1"></div>
                                <div class="eyee-2"></div>
                                <div class="mouth"></div>
                            </div>
                            <div class="hair-front"></div>
                        </div>
                    </div>
                    <div class="table">
                        <div class="bowl-2">
                            <div class="caneta-1"></div>
                            <div class="caneta-2"></div>
                        </div>
                        <div class="notebook">
                            @*<div class="apple"></div>*@
                        </div>
                        <div class="book-1"></div>
                        <div class="book-2"></div>
                        <div class="book-3"></div>
                        <div class="coffee">
                            <div class="smoke"></div>
                        </div>
                        <div class="bowl">
                            <div class="leaf-1"></div>
                            <div class="leaf-2"></div>
                            <div class="leaf-3"></div>
                            <div class="leaf-4"></div>
                            <div class="leaf-5"></div>
                        </div>
                        <div class="box">
                            <div class="circle"></div>
                            <div class="circle circle-2"></div>
                        </div>
                    </div>
                    @*<div class="flower"></div>*@
                </div>
            </section>
        </div>
    
</div>

