@model Service

@{
    Layout = "_LayoutLibrary";
    ViewData["Title"] = "Создание интернет-магазина";
    ViewBag.PortfolioExample = "Примеры интернет магазинов";
}

<div class="shop-wrap">
    <section class="header">
        @Html.Partial("_HeaderPartialView")
    </section>
    <section class="shop-description-wrap">
        <div class="presentation presentation-shop">
            <div class="isometric-wrapper">
                <div class="floor isometric shop">
                    <div class="shop-admin" id="adminOpenen">
                        <p class="md-light md-24">Админка</p>
                    </div>
                    <div class="appBar menu-buy">
                        <div class="buy" id="drawerOpener">
                            <i class="fa fa-shopping-cart" aria-hidden="true"></i>
                        </div>
                    </div>
                    <div class="content">
                        <div class="card">  </div>
                        <div class="card-shop-wrapper">
                            <div class="card"></div>
                            <div class="card"></div>
                            <div class="card"></div>
                        </div>
                        <div class="card-shop-wrapper">
                            <div class="card"></div>
                            <div class="card"></div>
                            <div class="card"></div>
                        </div>
                    </div>
                    @*<div class="fab dialogOpener toasted"></div>*@
                    <div class="dialogContainer hidden" id="dialog">
                        <div class="dialog"></div>
                    </div>
                    <div class="drawerContainer hidden" id="drawer">
                        <div class="drawer">
                            <div class="header"></div>
                        </div>
                    </div>
                    <div class="adminContainer hidden" id="admin">
                        <div class="admin">
                            <div class="card-admin-wrap">
                                <div class="card">
                                    <img src="http://anub.ru/uploads/07.2008/121751263099_2.jpg" alt="">
                                </div>
                                <div class="card">
                                    <img src="http://sartus.eu/images/gallery/b6f4f00a07935aef3a4c166432544a6f.png" alt="">
                                </div>
                                <div class="card"></div>
                            </div>
                            <div class="card-admin-wrap">
                                <div class="card">
                                    <img src="http://anub.ru/uploads/07.2008/121751263099_2.jpg" alt="">
                                </div>
                                <div class="card">
                                    <img src="http://sartus.eu/images/gallery/b6f4f00a07935aef3a4c166432544a6f.png" alt="">
                                </div>
                                <div class="card"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="description description-shop">
                <h1>Интернет магазин</h1>
                <p>
                    Позволяет принимать заказы в интернете 24 х 7, а удобная панель администратора легко и
                    быстро их обрабатывать. Гибкая структура позволяет легко расширить ассортимент
                    продукции и добавлять новые способы оплаты и доставки.
                </p>
                <p>Интернет магазин уже содержит:</p>
                <ul>
                    <li>Каталог продукции</li>
                    <li>Акции</li>
                    <li>Рекомендуемые товары</li>
                    <li>Корзину</li>
                    <li>Онлайн-платежи</li>
                    <li>Расчет стоимости доставки</li>
                </ul>
                <p>и др.</p>
                <a href="#order-form" class="btn btn-ghost-more btn-long">Закзать</a>
            </div>
        </div>
    </section>


    <section class="tabs-all shop-tabs" role="tab">
        <input id="tab__1" type="radio" name="tabs" checked="checked" />
        <input id="tab__2" type="radio" name="tabs" checked="checked" />
        <input id="tab__3" type="radio" name="tabs" />

        <div class="label-wrapper">
            <label for="tab__1" id="tab__l1">Готовые решения</label>
            <label for="tab__2" id="tab__l2">Создание сайта</label>
            <label for="tab__3" id="tab__l3">Разработка сайта</label>
        </div>

        <div class="tabs_content">

            <div id="tab__c1">
                <div class="tab-inner-content">
                    <div class="content-item"></div>
                    <aside>@await Component.InvokeAsync("PriceTimeDemo")</aside>
                </div>
                <div class="shop-description">
                    <div class="contains">
                        <h3>В стоимость входит</h3>
                        <ul>
                            <li>Любой из 5 шаблонов на выбор</li>
                            <li>Установка CMS на хостинге</li>
                            <li>Настройка магазина</li>
                            <li>Хостинг и доменое имя на 1год</li>
                            <li>Почтовый ящик с Вашим доменом</li>

                        </ul>
                    </div>
                    <div class="extra">
                        <h3>Дополнительные услуги</h3>
                        <ul>
                            <li>Базовое SEO</li>
                            <li>Доработка</li>
                            <li>И еще это</li>
                            <li>И вот</li>
                        </ul>
                    </div>
                </div>
            </div> @*tab__c1*@

            <div id="tab__c2">
                <div class="tab-inner-content">
                    <div class="content-item"></div>
                    <aside>@await Component.InvokeAsync("PriceTimeDemo")</aside>

                </div>
                @Html.Partial("_StepsCreatePartialView")
            </div> @*tab__c2*@
            <div id="tab__c3">
                <div class="tab-inner-content">
                    <div class="content-item"></div>
                    <aside>@await Component.InvokeAsync("PriceTimeDemo")</aside>

                </div>
            </div> @*tab__c3*@
        </div>
    </section>




    @await Component.InvokeAsync("ExamplesSites", new { category = "Интернет-магазин" })
    @await Component.InvokeAsync("OrderForm")
    <section class="footer">
        @Html.Partial("_FooterPartialView")
    </section>
</div>



