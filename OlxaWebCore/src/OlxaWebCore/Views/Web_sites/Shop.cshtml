                        -
                        -
                    </div>
                    <div id="tab_c2" role="tabpanel">222</div>
                    <div id="tab_c3" role="tabpanel">3333</div>
                </div>
            </section>

        </div> <!--shop-description-->
    </div>
</div> <!--container-->
<!-- Модальное окно -->
<div class="modal">
    <input class="modal-open" id="modal-window" type="checkbox" hidden>
    <div class="modal-wrap" aria-hidden="true" role="dialog">
        <label class="modal-overlay" for="modal-window"></label>
        <div class="modal-dialog">
            <div class="modal-header">
                <h4>Контактная информация </h4>
                <label class="btn-close" for="modal-window" aria-hidden="true">×</label>
            </div>
            <div class="modal-body">
                <form method="post" action="" id="shop_order" class="modal-form" role="form">
                    <section class="information">
                        <input type="text" placeholder="Имя" />
                        <input type="tel" placeholder="Телефон" />
                        <input type="email" placeholder="Email" />
                        <!--<p>*выбирите наиболее предпочтительный вид связи</p>-->
                    </section>
                    <section class="comment">
                        <textarea name="comment" style="height:150px" placeholder="Комментарий"></textarea>
                        <div class="file">
                            <p>
                                Если у вас есть готовый бриф или ТЗ можете приложить их к письму
                            </p>

                            <div class="file_upload">
                                <button type="button">Выбрать</button>
                                <div>Файл не выбран</div>
                                <input type="file">
                            </div>
                            <div class="capcha">
                                тут капча
                            </div>
                        </div>
                    </section>
                </form>
            </div>
            <div class="modal-footer">
                <label class="btn " for="modal-window">Отправить!</label>
            </div>
        </div>
    </div>
</div>

