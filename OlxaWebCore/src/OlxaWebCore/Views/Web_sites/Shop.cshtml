                </div>
            </div>
        </section>
        <section class="description-shop"></section>
        <section class="step-work"></section>

        <div class="shop-description">
            <!-- Nav Tabs -->
            <section class="tabs">
                <input id="tab_1" type="radio" name="tab" checked="checked" />
                <input id="tab_2" type="radio" name="tab" />
                <input id="tab_3" type="radio" name="tab" />

                <div class="label-wrap" role="tablist">
                    <label for="tab_1" id="tab_l1" role="tab">Что входит в цену</label>
                    <label for="tab_2" id="tab_l2" role="tab">Дополнительные услуги</label>
