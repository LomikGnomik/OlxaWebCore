@model  ProductListViewModel

@{
    ViewData["Title"] = "Готовые сайты";
}

<div class="products-wrapper">
    <div class="container">
        <div class="products-wrapper-title">
            <h2>Готовые Сайты</h2>
            <small>Просто выбирите понравившийся сайт и оформите заказ</small>
        </div>
        <div class="product-content">
            <div class="product-filter-wrap">
                <h3>
                    <i class="fa fa-clipboard" aria-hidden="true"></i>
                    Категории
                </h3>
                <div class="filter">
                    <ul class="nav-filters">
                        <li class="active"><a href="#" data-filter="*">Все</a></li>
                        <li><a href="#" data-filter=".vis">Визитка</a></li>
                        <li><a href="#" data-filter=".lend">Лендинг</a></li>
                        <li><a href="#" data-filter=".corp">Корпоративный</a></li>
                        <li><a href="#" data-filter=".shop">Интернет-магазин</a></li>
                        <li><a href="#" data-filter=".inform">Информационный</a></li>
                    </ul>
                </div>
            </div>
            <div class="products-catalog-wrap grid isotope-grid filter-grid">
                <div class="grid-sizer"></div>
                <div class="gutter-sizer"></div>


                @foreach (var site in Model.Products)
                {
                     // Html.Partial("_ProductItemPartialView");        //находится в папке shared. Частичное представление работает, но не отображается

                    <div class="product-item grid-item view vis">

                        <div class="product">
                            <figure>
                                <img src="~/images/blog/post01.jpg" alt="Product Image" class="product-image">
                            </figure>

                            <div class="product-description">

                                <div class="info">
                                    <h1>@site.Name</h1>
                                </div>

                                <div class="price">
                                    @site.Price
                                </div>
                            </div>

                            <div class="product-sidebar">
                                <a href="#" class="buy" title="Купить">
                                    <i class="fa fa-shopping-cart" aria-hidden="true"></i>
                                </a>

                                <a class="info" title="Подробнее" asp-controller="Product" asp-action="Product">
                                    <i class="fa fa-info" aria-hidden="true"></i>
                                </a>

                                <a href="#" class="demo" title="Демо">
                                    <i class="fa fa-object-group" aria-hidden="true"></i>
                                </a>                                
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

